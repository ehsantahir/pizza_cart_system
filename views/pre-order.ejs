<%- include ("partials/header"); %>

<div class="root w-screen h-screen bg-zinc-900 flex flex-col">

    <div class="weight-1 flex justify-center items-center">
        <h1 class="text-5xl font-bold text-white">PRE-ORDER PAGE</h1>
    </div>

    <div class="weight-2 flex justify-around items-center">

        <div class="w-60 h-60 relative bg-white flex flex-col <%= args.type %>-image-holder">
            <div class="weight-1 <%= args.type %>-image-container"></div>
            <div class="h-12 w-60 absolute items-container-heading flex justify-center items-center">
                <h3 class="text-2xl text-white"><%= args.type === 'cheese-pizza' ? 'CHEESE' : args.type === 'vegetable-pizza' ? 'VEGETABLE' : 'FRIES' %></h3>
            </div>
        </div>

        <div class="text-white flex flex-col justify-around items-center">

            <% if (args.type === 'cheese-pizza' || args.type === 'vegetable-pizza') { %>
                <label class="text-white text text-2xl font-bold">Select Size: </label>

                <div class="flex justify-center gap-5">
                    <div class="small-button">
                        <input type="radio" id="small" name="size" checked onclick="onRadioClick('<%=args.type%>', 0);"/>
                        <label for="small">Small</label>
                    </div>
                    <div class="medium-button">
                        <input type="radio" id="medium" name="size" onclick="onRadioClick('<%=args.type%>', 1)"/>
                        <label for="medium">Medium</label>
                    </div>
                    <div class="large-button">
                        <input type="radio" id="large" name="size" onclick="onRadioClick('<%=args.type%>', 2)"/>
                        <label for="large">Large</label>
                    </div>
                </div>
            <% } %>

            <div class="price-value flex justify-center gap-3">
                <div class="text-white font-bold">Price: </div>
                <div class="value price-input font-bold"><%= args.type === 'cheese-pizza' ? '$5' : args.type === 'vegetable-pizza' ? '$6' : '$10' %></div>
            </div>

            <div class="text-white cart-button font-bold flex items-center justify-center">
                <button class="make-order-button" onclick="onAddToCartClick('<%=args.type%>');">Add Cart</button>
            </div>

        </div>

    </div>

    <div class="view-cart-button h-28 bg-purple-800 hover:bg-purple-900 hover:cursor-pointer">
        <div class="text-white text-6xl flex items-center justify-center gap-6 h-full">
            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 576 512" height="70px"
                 width="70px" xmlns="http://www.w3.org/2000/svg">
                <path d="M504.717 320H211.572l6.545 32h268.418c15.401 0 26.816 14.301 23.403 29.319l-5.517 24.276C523.112 414.668 536 433.828 536 456c0 31.202-25.519 56.444-56.824 55.994-29.823-.429-54.35-24.631-55.155-54.447-.44-16.287 6.085-31.049 16.803-41.548H231.176C241.553 426.165 248 440.326 248 456c0 31.813-26.528 57.431-58.67 55.938-28.54-1.325-51.751-24.385-53.251-52.917-1.158-22.034 10.436-41.455 28.051-51.586L93.883 64H24C10.745 64 0 53.255 0 40V24C0 10.745 10.745 0 24 0h102.529c11.401 0 21.228 8.021 23.513 19.19L159.208 64H551.99c15.401 0 26.816 14.301 23.403 29.319l-47.273 208C525.637 312.246 515.923 320 504.717 320zM408 168h-48v-40c0-8.837-7.163-16-16-16h-16c-8.837 0-16 7.163-16 16v40h-48c-8.837 0-16 7.163-16 16v16c0 8.837 7.163 16 16 16h48v40c0 8.837 7.163 16 16 16h16c8.837 0 16-7.163 16-16v-40h48c8.837 0 16-7.163 16-16v-16c0-8.837-7.163-16-16-16z"></path>
            </svg>
            <span>View Cart</span>
        </div>
    </div>

</div>

<script type="application/javascript" src="/js/pre-order.js"></script>

<%- include ("partials/footer"); %>